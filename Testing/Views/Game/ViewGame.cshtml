@model Game

<h3>@Model.name Details</h3>

<table class="table">
    <tr>
        <th>Game ID</th>
        <th>Name</th>
        <th>Genre</th>
        <th>Release Date</th>
        <th>Status</th>
    </tr>
    <tr>
        <td>@Model.gameID</td>
        <td>@Model.name</td>
        <td>@Model.genre</td>
        <td>@Model.release_date</td>
        <td>@Model.status</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Game/UpdateGame/@Model.gameID">Update this Game</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteGame", "Game", "Post"))
    {
        <input type="hidden" asp-for="gameID" value="@Model.gameID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this game" />
    }
</div>