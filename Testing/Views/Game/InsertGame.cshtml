@model Game

<h2>Add a New Game</h2>

@using (Html.BeginForm("InsertGameToDatabase", "Game", "Post"))
{
    <input asp-for="gameID" type="hidden" value=""/>

    <label asp-for="name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="genre" class="control-label">Genre</label>
    <input type="text" name="Genre" class="form-control" />

    <label asp-for="release_date" class="control-label">Release Date</label>
    <input type="number" name="release_date" class="form-control" value="" />

    <label asp-for="status" class="control-label">Status</label>
    <select asp-for="status" class="form-control custom-dropdown">
        <option value="Not Played">Not Played</option>
        <option value="To Play">To Play</option>
        <option value="Played Not Beaten">Played, Not Beaten</option>
        <option value="Beaten">Beaten</option>
    </select>

    <input type="submit" value="Add Game" class="btn btn-primary" />
}