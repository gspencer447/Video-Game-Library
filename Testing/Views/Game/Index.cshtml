@model IEnumerable<Game>

<h2>Games</h2>

<div style="display: block">
    <a href="/Game/InsertGame/">Add a New Game</a>
</div>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Genre</th>
        <th>Release Date</th>
    </tr>

    @foreach (var game in @Model)
    {
        <tr>
            <td><a href=/Game/ViewGame/@game.gameID>@game.gameID</a></td>
            <td>@game.name</td>
            <td>@game.genre</td>
            <td>@game.release_date</td>
        </tr>
    }

</table>